@model AOMVC.Models.LoginModel

@{
    ViewBag.Title = "Login";
}


<div class="login clearfix">
    <h1>Articulatie<span class="highlight">Onderzoek</span></h1>
    <hr />
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
    { 
        @Html.AntiForgeryToken()
        <div class="input-group">
            <div class="input-append">
                @Html.TextBoxFor(m => m.Email, new { @placeholder="name@domain.ex" })
                <span class="add-on"><i class="icon-envelope"></i></span>
            </div>
            @Html.ValidationMessageFor(m => m.Email, string.Empty, new { @class = "text-error"}) 
        </div>
        <div class="input-group">
            <div class="input-append">
                @Html.PasswordFor(m => m.Password, new { @placeholder="password" })
                <span class="add-on"><i class="icon-lock"></i></span>
            </div>
            @Html.ValidationMessageFor(m => m.Password, string.Empty, new { @class = "text-error"}) 
        </div>
        <input type="submit" class="btn" value="Login" />
            string reg = Url.Action("Register", "Contact");
        <input type="button" class="btn" value="Registreren" onclick="window.location='@reg'"/>   
        
        @Html.ValidationSummary(true, "Inloggen is niet gelukt, verbeter de fouten en probeer nog eens.")
    }
</div>
<a href="http://www.sig-net.be/" class="login-logo" title="sig werkgroep"><img src="~/Content/Images/logo.png" alt="Sig onderzoeksgroep logo" /></a>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}