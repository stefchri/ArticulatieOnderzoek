
@section Styles{
    @Styles.Render("~/Content/themes/lightness")
}
@model AOMVC.Models.ChildRegisterModel
@{
    ViewBag.Title = "Kind Registreren";
}

<h1>Nieuw kind registreren</h1>
<hr />
@using (Html.BeginForm("Register", "Child", FormMethod.Post, new { @class="form-horizontal span8 clearfix block" }))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()


    <div class="control-group">
        @Html.LabelFor(model => model.Firstname, new { @class = "control-label"})
        <div class="controls">
            @Html.EditorFor(model => model.Firstname)
        </div>
        @Html.ValidationMessageFor(model => model.Firstname)
    </div>

    <div class="control-group">
        @Html.LabelFor(model => model.Surname, new { @class = "control-label"})
        <div class="controls">
            @Html.EditorFor(model => model.Surname)
        </div>
        @Html.ValidationMessageFor(model => model.Surname)
    </div>

    <div class="control-group">
        @Html.LabelFor(model => model.Email, new { @class = "control-label"})
        <div class="controls">
            @Html.EditorFor(model => model.Email)
        </div>
        @Html.ValidationMessageFor(model => model.Email)
    </div>
        
    <div class="control-group">
        @Html.LabelFor(model => model.DateOfBirth, new { @class = "control-label"})
        <div class="controls">
            @Html.TextBoxFor(model => model.DateOfBirth, new { @class="datepicker"})
        </div>
        @Html.ValidationMessageFor(model => model.DateOfBirth)
    </div>

    <div class="control-group">
        @Html.LabelFor(model => model.Gender, new { @class = "control-label"})
        <div class="controls">
            @Html.DropDownListFor(m => m.Gender, new SelectList(HtmlLists.Genders, "GenderValue", "GenderText"))
        </div>
    </div>
    
    <div class="control-group">
        <div class="controls">
            <input type="submit" value="Registreer kind" class="btn" />
        </div>
    </div>
}
<section class="span3 clearfix info">
    <p>Registreer hier een kind om te testen met het ArticulatieOnderzoeksprogramma.</p>
    <p>Na het registreren zal er een mail verstuurd worden naar de ingeschrevene om deze te verwittigen.</p>
    <p>Hij of zij kan dan getest worden met het programma. </p>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")

    <script>
        window.onload = function (e) {
            $(".datepicker").datepicker({
                changeMonth: true,
                changeYear: true,
                yearRange: '2005:@DateTime.Now.Year',
                dateFormat: 'dd/mm/yy'
            });
        }
    </script>
}