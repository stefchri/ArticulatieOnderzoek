@model ICollection<LibAOModels.User>

<table class="table">
    <tr>
        <th>Kind</th>
        <th>Geboortedatum</th>
        <th>Email</th>        
        <th>Geregistreerd</th>
        <th>Geslacht</th>
        <th>Aantal testen</th>
        <th></th>
    </tr>
    @foreach (var child in Model)
    {
        string outp = "";
        if (child.Gender == "f")
        {
            outp = "vrouw";
        }
        else
        {
            outp = "man";
        }
        <tr>
            <td>@child.Firstname @child.Surname</td>
            <td>@Html.DisplayFor(model => child.Createddate.Date,"ShortDate")</td>
            <td>@child.Email</td>
            <td>@Html.DisplayFor(modelItem => child.Createddate, "LocalDatetime")</td>
            <td>@outp</td>
            <td>@child.TestsTaken.Count()</td>
            <td>@Html.ActionLink("Informatie", "Detail", "Child", new { id = child.ID }, new  { @title="Informatie over het kind"})</td>
        </tr>
    }
</table>
